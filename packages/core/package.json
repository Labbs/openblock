{
  "name": "@openblock/core",
  "version": "0.0.1",
  "description": "Framework-agnostic core for OpenBlock editor",
  "license": "Apache-2.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles": "./dist/styles/editor.css",
    "./styles/editor.css": "./dist/styles/editor.css"
  },
  "files": [
